<Window x:Class="ShoppingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="700">
    <Grid Name="firstGrid"  Height="450" HorizontalAlignment="Center" Width="700">
        <ListView ItemsSource="{Binding Items}" Margin="30,50,30,70">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="100" Header="Brand" DisplayMemberBinding="{Binding Brand}"  />
                    <GridViewColumn Width="130" Header="Model" DisplayMemberBinding="{Binding Series}"  />
                    <GridViewColumn Width="150" Header="Image">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Image}" MaxHeight="100" Stretch="UniformToFill"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Width="70" Header="Cost" DisplayMemberBinding="{Binding Cost}"  />

                    <GridViewColumn Width="70" Header="QTY">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Width="50" HorizontalAlignment="Center" VerticalAlignment="Top">
                                    <Button Name="increase" Content="+" HorizontalAlignment="Center" VerticalAlignment="Top" Width="20" Height="20" Tag="{Binding Id}" Click="ListReflect_Click"/>
                                    <TextBox Name="quantity"  HorizontalAlignment="Center" Text="0" MaxLength="3" TextWrapping="Wrap" VerticalAlignment="Top" Width="30" Tag="{Binding Id}"/>
                                    <Button Name="decrease" Content="-" HorizontalAlignment="Center" VerticalAlignment="Top" Width="20" Height="20" Tag="{Binding Id}" Click="ListReflect_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Width="70" Header="Add">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Name="ButtID" Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="35" Height="20" Tag="{Binding Name}" Click="ListReflect_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
